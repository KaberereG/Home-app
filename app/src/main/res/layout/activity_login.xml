<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grad_bg"
    android:id="@+id/drawerLayout"
    tools:context="com.example.waithera.homeapp.Login">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/occupation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="10dp"
        android:text="Select the occupation"
        android:layout_centerHorizontal="true"
        android:textSize="18sp" />

</LinearLayout>
    <Button
        android:id="@+id/nannys"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/background_login"
        android:layout_marginTop="56dp"
        android:text="@string/nanny" />

    <Button
        android:id="@+id/plumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/nannys"
        android:layout_alignStart="@+id/nannys"
        android:layout_below="@+id/nannys"
        android:layout_centerHorizontal="true"
        android:background="@drawable/background_login"
        android:layout_marginTop="36dp"
        android:text="@string/plumber" />

    <Button
        android:id="@+id/carpenter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/plumber"
        android:layout_alignStart="@+id/plumber"
        android:layout_below="@+id/plumber"
        android:layout_centerHorizontal="true"
        android:background="@drawable/background_login"
        android:layout_marginTop="36dp"
        android:text="@string/carpenter" />

    <Button
        android:id="@+id/househelp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/carpenter"
        android:layout_alignStart="@+id/carpenter"
        android:layout_below="@+id/carpenter"
        android:layout_centerHorizontal="true"
        android:background="@drawable/background_login"
        android:layout_marginTop="36dp"
        android:text="@string/househelp"/>

    <Button
        android:id="@+id/cleaner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/househelp"
        android:layout_alignStart="@+id/househelp"
        android:layout_below="@+id/househelp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/background_login"
        android:layout_marginTop="36dp"
        android:text="@string/cleaner" />

        <Button
            android:id="@+id/otherWorkers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/cleaner"
            android:layout_alignStart="@+id/cleaner"
            android:layout_below="@+id/cleaner"
            android:layout_centerHorizontal="true"
            android:background="@drawable/background_login"
            android:layout_marginTop="36dp"
            android:text="@string/others" />


    <Button
        android:id="@+id/logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/otherWorkers"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="Logout"
        android:background="@drawable/background_signup"/>
    </RelativeLayout>
</ScrollView>
    <android.support.design.widget.NavigationView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:menu="@menu/menu"
        android:layout_gravity="start"
        android:id="@+id/nav_view">

    </android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>