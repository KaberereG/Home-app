<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grad_bg"
    tools:context="com.example.waithera.homeapp.Login_employer">
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:text="Select occupations help"
        android:textSize="18sp" />

    <Button
        android:id="@+id/nannys"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:background="@drawable/background_login"
        android:layout_marginTop="36dp"
        android:text="@string/nanny" />

    <Button
        android:id="@+id/plumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/nannys"
        android:layout_alignStart="@+id/nannys"
        android:layout_below="@+id/nannys"
        android:layout_centerHorizontal="true"
        android:background="@drawable/background_login"
        android:layout_marginTop="36dp"
        android:text="@string/plumber" />

    <Button
        android:id="@+id/carpenter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/plumber"
        android:layout_alignStart="@+id/plumber"
        android:layout_below="@+id/plumber"
        android:layout_centerHorizontal="true"
        android:background="@drawable/background_login"
        android:layout_marginTop="36dp"
        android:text="@string/carpenter" />

    <Button
        android:id="@+id/househelp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/carpenter"
        android:layout_alignStart="@+id/carpenter"
        android:layout_below="@+id/carpenter"
        android:layout_centerHorizontal="true"
        android:background="@drawable/background_login"
        android:layout_marginTop="36dp"
        android:text="@string/househelp"/>

    <Button
        android:id="@+id/cleaner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/househelp"
        android:layout_alignStart="@+id/househelp"
        android:layout_below="@+id/househelp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/background_login"
        android:layout_marginTop="36dp"
        android:text="@string/cleaner" />

    <Button
        android:id="@+id/logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="Logout"
        android:background="@drawable/background_signup"/>

</RelativeLayout>
